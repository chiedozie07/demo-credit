{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "CommonJS",
    "target": "ES6",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@models/*": ["src/models/*"]
    },
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests", "*.spec.ts"]
}
