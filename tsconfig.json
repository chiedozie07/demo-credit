{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "CommonJS",
    "target": "ES6",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@models/*": ["src/models/*"],
      "@controllers/*": ["src/controllers/*"],
      "@routes/*": ["src/routes/*"],
      "@db/*": ["db/*"]
    },
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests/**/*.ts", "*.spec.ts", "README.md"],
}
