{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@models/*": ["src/models/*"],
      "@controllers/*": ["src/controllers/*"],
      "@routes/*": ["src/routes/*"]
    },
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "*.test.ts",
    "jest.config.ts",
    "jest.config.ts",
    "README.md",      
    "LICENSE",
    ".env",      
    "restClientApiTest.http",
    "deployDB.sql",
    "nodemon.json"
  ]
}
