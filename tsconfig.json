{
  "compilerOptions": {
    "outDir": "src/dist",
    "rootDir": "./src",
    "module": "CommonJS",
    "target": "ES6",
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["src/controllers/*"],
      "@routes/*": ["src/routes/*"],
      "@db/*": ["src/db/*"],
      "@models/*": ["src/models/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/dist", "tests/**/*.ts", "*.spec.ts"]
}
